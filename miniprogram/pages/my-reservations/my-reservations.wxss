/* pages/my-reservations/my-reservations.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域样式 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 原有样式保持不变 */
.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
  color: #999;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.add-btn {
  margin-top: 40rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

.reservation-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.list-header {
  padding: 30rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #eee;
}

.list-header text {
  font-size: 28rpx;
  color: #666;
}

.reservation-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status.pending {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.status.confirmed {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status.cancelled {
  background-color: #f5f5f5;
  color: #999;
}

.item-content {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-cancel {
  background-color: #ff4d4f;
  color: white;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
}