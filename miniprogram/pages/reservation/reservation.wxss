/* 预约页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  margin-bottom: 30rpx;
  background: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.form-label {
  display: block;
  margin-bottom: 15rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.form-input {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #fafafa;
}

.form-input:focus {
  border-color: #1989fa;
  background-color: white;
}

.picker {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #666;
  background-color: #fafafa;
  position: relative;
}

.picker::after {
  content: "▼";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 24rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #fafafa;
  resize: vertical;
}

.btn-primary {
  width: 90%;
  margin: 40rpx auto;
  background-color: #1989fa;
  color: white;
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(25,137,250,0.3);
}

.btn-primary:active {
  opacity: 0.8;
}

/* 修复输入框点击区域 */
input, textarea, .picker {
  cursor: pointer;
  user-select: text;
}

/* 确保输入框可点击 */
.form-input, .form-textarea {
  position: relative;
  z-index: 1;
}

/* 防止picker被遮挡 */
picker {
  display: block;
  width: 100%;
}