<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-item">
      <text class="form-label">姓名 *</text>
      <input 
        name="name" 
        class="form-input" 
        placeholder="请输入您的姓名" 
        placeholder-class="placeholder"
        value="{{formData.name}}"
        bindinput="onInputChange"
        data-field="name"
        required 
      />
    </view>
    
    <view class="form-item">
      <text class="form-label">手机号码 *</text>
      <input 
        name="phone" 
        class="form-input" 
        placeholder="请输入手机号码" 
        placeholder-class="placeholder"
        type="number" 
        maxlength="11"
        value="{{formData.phone}}"
        bindinput="onInputChange" 
        data-field="phone"
        required 
      />
    </view>
    
    <view class="form-item">
      <text class="form-label">身份证号 *</text>
      <input 
        name="idCard" 
        class="form-input" 
        placeholder="请输入身份证号码" 
        placeholder-class="placeholder"
        value="{{formData.idCard}}"
        bindinput="onInputChange"
        data-field="idCard"
        required 
      />
    </view>
    
    <view class="form-item">
      <text class="form-label">预约日期 *</text>
      <picker 
        mode="date" 
        value="{{date}}" 
        start="{{today}}" 
        end="{{maxDate}}" 
        bindchange="bindDateChange"
      >
        <view class="picker form-input {{date ? '' : 'placeholder'}}">
          {{date || '请选择预约日期'}}
        </view>
      </picker>
    </view>
    
    <view class="form-item">
      <text class="form-label">预约时间 *</text>
      <picker 
        mode="time" 
        value="{{time}}" 
        start="09:00" 
        end="18:00" 
        bindchange="bindTimeChange"
      >
        <view class="picker form-input {{time ? '' : 'placeholder'}}">
          {{time || '请选择预约时间'}}
        </view>
      </picker>
    </view>
    
    <view class="form-item">
      <text class="form-label">备注信息</text>
      <textarea 
        name="remark" 
        class="form-textarea" 
        placeholder="请输入备注信息（选填）"
        placeholder-class="placeholder"
        value="{{formData.remark}}"
        bindinput="onInputChange"
        data-field="remark"
        auto-height 
      />
    </view>
    
    <button form-type="submit" class="btn-primary" loading="{{loading}}" disabled="{{loading}}">
      {{loading ? '提交中...' : '提交预约'}}
    </button>
  </form>
</view>